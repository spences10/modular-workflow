		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/eslint": "^9.6.1",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"svelte": "^5.15.0",
		"svelte-check": "^4.1.1",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.2",
		"vite": "^5.4.9",
		"vitest": "^2.1.8"
	},
	"type": "module"
